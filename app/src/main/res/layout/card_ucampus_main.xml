<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_ucampus"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:foreground="@drawable/fg_ripple_gray"
    android:layout_margin="4dp"
    app:cardCornerRadius="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <TextView
            android:id="@+id/card_ucampus_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/card_ucampus_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_ucampus_title"
            android:layout_marginTop="2dp"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/card_ucampus_newNotice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/icon_new_info" />
            <ImageView
                android:id="@+id/card_ucampus_newAssignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:src="@drawable/icon_new_assignment" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>