<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/fg_ripple_gray"
    android:paddingTop="4dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">
    <TextView
        android:id="@+id/card_info_title"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gray800"
        android:lines="2" />

    <TextView
        android:id="@+id/card_info_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/card_info_title"
        android:textSize="14sp"
        android:textColor="@color/gray700" />

    <!-- 조회수 -->
    <TextView
        android:id="@+id/card_info_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/card_info_writer"
        android:layout_toStartOf="@+id/card_info_date"
        android:layout_marginEnd="8dp"
        android:textSize="10sp"
        android:textColor="@color/gray600" />
    <!-- 날짜 -->
    <TextView
        android:id="@+id/card_info_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/card_info_writer"
        android:layout_alignParentEnd="true"
        android:textSize="10sp"
        android:textColor="@color/gray500" />

    <ImageView
        android:id="@+id/card_info_new"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/card_info_title"
        android:layout_marginTop="6dp"
        android:src="@drawable/icon_new"
        android:contentDescription="@string/card_info_new" />
    <ImageView
        android:id="@+id/card_info_attach"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/card_info_new"
        android:layout_marginTop="6dp"
        android:src="@drawable/icon_save"
        android:contentDescription="@string/card_info_attachment" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/card_info_writer"
        android:layout_marginTop="6dp"
        android:background="@color/gray300" />
</RelativeLayout>