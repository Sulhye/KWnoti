<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_calendar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">
    <!-- 월 -->
    <TextView
        android:id="@+id/card_calendar_month"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/brown800" />
    <!-- 일 -->
    <TextView
        android:id="@+id/card_calendar_date"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:textSize="16sp"
        android:textColor="@color/brown500" />
    <View style="@style/Line"
        android:id="@+id/card_calendar_line_v"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/card_calendar_date"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp" />

    <!-- 내용 -->
    <TextView
        android:id="@+id/card_calendar_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/card_calendar_line_v"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="18sp"
        android:textColor="@color/gray700"
        android:includeFontPadding="false"
        android:maxLines="2" />
    <View style="@style/Line"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true" />
</RelativeLayout>