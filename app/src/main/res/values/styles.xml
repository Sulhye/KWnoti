<resources>
    <!-- 메인 테마 -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/kwRed</item>
        <item name="android:colorPrimaryDark">@color/kwRedDark</item>
        <item name="android:colorAccent">@color/amberA400</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:navigationBarColor">?android:attr/colorPrimary</item>
    </style>
    <!-- 상단바 없는 테마 -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 스플래시 테마 -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:background">@drawable/splash</item>
    </style>

    <!-- 메인 페이지에서 쓰이는 카드 스타일 -->
    <style name="CardStyle">
        <!-- 레이아웃 -->
        <item name="android:layout_width">@dimen/card_size</item>
        <item name="android:layout_height">@dimen/card_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:foreground">@drawable/fg_ripple_white</item>
        <!--<item name="android:background">@color/brown500</item>
        <item name="android:foreground">@drawable/fg_ripple_brown</item>-->
        <!-- 글자 -->
        <item name="android:gravity">bottom|end</item>
        <!--<item name="android:textColor">@color/white</item>-->
        <item name="android:textColor">@color/kwGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily"></item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:padding">6dp</item>
    </style>

    <!-- 학생증 화면에서 쓰이는 표 글씨 스타일 -->
    <style name="StudentCard_titleStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/brown800</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StudentCard_textStyle">
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray300</item>
    </style>
</resources>
