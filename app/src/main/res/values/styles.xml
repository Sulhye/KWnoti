<resources>
    <!-- 메인 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/kwRed</item>
        <item name="colorPrimaryDark">@color/kwRedDark</item>
        <item name="colorAccent">@color/amberA400</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="actionMenuTextColor">?attr/colorPrimary</item>
    </style>
    <!-- 상단바 없는 테마 -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!-- 스플래시 테마 -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="background">@drawable/splash</item>
    </style>

    <!-- 메인 페이지에서 쓰이는 카드 스타일 -->
    <style name="CardStyle">
        <!-- 레이아웃 -->
        <item name="android:layout_width">@dimen/card_size</item>
        <item name="android:layout_height">@dimen/card_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="background">@color/white</item>
        <item name="android:foreground">@drawable/fg_ripple_white</item>
        <!-- 글자 -->
        <item name="android:gravity">bottom|end</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/kwGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:padding">6dp</item>
    </style>

    <!-- 학생증 화면에서 쓰이는 표 글씨 스타일 -->
    <style name="StudentCard_titleStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/brown800</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StudentCard_textStyle">
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="background">@color/gray300</item>
    </style>

    <!-- 강의계획서 검색에 쓰이는 표 스타일 -->
    <style name="LectureSearch_cellStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:weightSum">1</item>
    </style>
    <style name="LectureSearch_titleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="LectureSearch_contentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>
</resources>
